<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools">

    <org.pb.android.geomap3d.view.OpenGLSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:id="@+id/shiftMenu"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="#a01091ff"
        android:visibility="visible">

        <ImageView
            android:id="@+id/shiftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:paddingTop="4dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/shifter_menu_btn_down"
            android:tint="#a01091ff"/>

        <TextView
            android:id="@+id/tvDevicePosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="-- N, -- E"
            tools:text="51.281761 N, 9.800702 E"
            />

        <Switch
            android:id="@+id/switchCompass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_marginTop="20dp"
            android:thumbTint="#ffffff"
            android:trackTint="#80ffffff"
            android:textColor="#a0ffffff"
            android:text="Compass enabled"
            />

        <Switch
            android:id="@+id/switchAutomaticTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_marginTop="20dp"
            android:thumbTint="#ffffff"
            android:trackTint="#80ffffff"
            android:textColor="#a0ffffff"
            android:text="Automatic track position enabled"
            />

        <LinearLayout
            android:id="@+id/layoutSeekBarTrackDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvTrackDistanceInMeters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/sbTrackDistance"
                android:text="250"/>

            <SeekBar
                android:id="@+id/sbTrackDistance"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumbTint="#ffffff"
                android:progressTint="#80ffffff"
                android:max="1000"
                android:progress="250"
                />
        </LinearLayout>


        <!-- Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Clear markers"
            / -->

    </LinearLayout>

</RelativeLayout>