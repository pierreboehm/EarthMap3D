<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <org.pb.android.geomap3d.fragment.ui.MapView_
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tvCenterOfMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#A0ffffff"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="Breitengrad: 52.533202\nLÃ¤ngengrad: 13.429003"/>

    <org.pb.android.geomap3d.view.ProgressView_
        android:id="@+id/progressView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/screenSwitch"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:tint="@color/warm_blue"
        android:src="@drawable/icn_reload_c00"
        android:scaleType="centerInside"
        android:background="@drawable/rectangle_shape_rounded"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>

</RelativeLayout>